@using eticaretwebsite1.Entity
@model IEnumerable<Product>

<div id="myCarousel" class="carousel slide homCar">
    <div class="carousel-inner">
        
        <div class="item active">
            <img style="width:100%; max-width:698.67px; max-height:327.9px; min-width:698.67px; min-height:327.9px;" src="https://cdn.bkmkitap.com/Data/EditorFiles/KategoriYeni/edebiyat-kitaplari.jpg" alt="bootstrap ecommerce templates">
            <div class="carousel-caption">
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="item">
                <a href="/Home/ProductDetails/@item.Id"><img style="width:100%; max-width:698.67px; max-height:327.9px; min-width:698.67px; min-height:327.9px;" src="~/Content/image/@item.image" alt="bootstrap templates"></a>
                <div class="carousel-caption">
                    <h4>@item.Name</h4>
                    <p><span></span></p>
                </div>
            </div>
        }
        
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
</div>
